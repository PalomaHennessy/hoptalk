<div class="background" id="signuppage">

<h1 id="bheader">Hop Talk</h1>


<form class="form-horizontal" method="POST" action="/signup">

 <div class="form-group">
    <label for="InputName1" class="col-sm-2 control-label">First Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputName1" placeholder="Jane" name="first">
      </div>
  </div>
 <div class="form-group">
    <label for="InputName2" class="col-sm-2 control-label"> Last Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputName2" placeholder="Doe" name="last">
      </div>
  </div>

  <div class="form-group">
    <label for="inputEmail2" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="inputEmail2" placeholder="Email" name="email">
    </div>
  </div>

  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="password1" placeholder="Password (minimum of 6 characters)">
      <br/>
      <input type="password" name="password2" class="form-control" placeholder="Re-enter your password"/>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" href="/submit" id="signup">Sign up</button>
    </div>
  </div>
</form>
